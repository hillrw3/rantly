<% if @user.errors.present? %>
  <p></p>

  <div class="errors">
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <p></p>
<% end %>

<%= form_for @user, html: {class: 'form'} do |f| %>

  <div class="left-section">
    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :first_name %>
    <br>
    <%= f.text_field :first_name %>
    <br><br>
  </div>
  <div class="right-section">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>
    <%= f.label :last_name %>
    <br>
    <%= f.text_field :last_name %>
    <br><br>
  </div>
  <%= f.label :bio %>
  <br>
  <%= f.text_area :bio %>
  <br><br>
  <%= f.label :rant_frequency, "How often do you rant?" %>
  <br>
  <%= f.radio_button :rant_frequency, 'Daily' %>
  <%= f.label :rant_frequency_daily, 'Daily' %>
  <%= f.radio_button :rant_frequency, 'Weekly' %>
  <%= f.label :rant_frequency_weekly, 'Weekly' %>
  <%= f.radio_button :rant_frequency, 'Monthly' %>
  <%= f.label :rant_frequency_monthly, 'Monthly' %>
  <br/>
  <%= f.label :avatar, "Upload a Profile Picture" %>
  <%= f.file_field :avatar %>
  <br/><br/>
  <hr/>
  <br/>
  <%= f.submit action_word, class: 'green-button' %>

<% end %>