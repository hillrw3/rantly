<div class="white-box sixtywidth">
  <h2>Edit</h2>

  <% if @user.errors.present? %>
    <div class="errors">
      <% @gif.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_for @user do |f| %>

    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br><br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>
    <%= f.label :first_name %>
    <br>
    <%= f.text_field :first_name %>
    <br><br>
    <%= f.label :last_name %>
    <br>
    <%= f.text_field :last_name %>
    <br><br>
    <%= f.label :bio %>
    <br>
    <%= f.text_area :bio %>
    <br><br>
    <%= f.label :rant_frequency, "How often do you rant?" %>
    <br>
    <%= f.radio_button :rant_frequency, 'Daily' %>
    <%= f.label :rant_frequency_daily, 'Daily' %>
    <%= f.radio_button :rant_frequency, 'Weekly' %>
    <%= f.label :rant_frequency_weekly, 'Weekly' %>
    <%= f.radio_button :rant_frequency, 'Monthly' %>
    <%= f.label :rant_frequency_monthly, 'Monthly' %>
    <br><br>
    <%= f.submit "Update", class: 'green-button' %>

  <% end %>

</div>