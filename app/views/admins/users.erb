<div class="centered-text white-background">
  <h1>Users</h1>
  <table class="users-table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th><%= link_to "Number of Rants", sort: true %></th>
      <th>Disabled</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.rants.count %></td>
        <td>
          <%= 'âœ“' unless user.enabled %></td>
        <td>
          <% if user.enabled %>
            <%= link_to "Disable", disable_path(user) %>
          <% else %>
            <%= link_to "Enable", disable_path(user) %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>